#include<iostream>
using namespace std;

int main()
{
    int n;
    cin>>n;
    
    int i=1;
    while(i<=n){
        // Space print
        int space = n-i;
        while(space){
            cout<<" ";
            space--;
        }
        
        // first triangle
        int j=1;
        while(j<=i){
            cout<<j;
            j++;
        }
        
        // second triangle
        int k=i-1;
        while(k){
            cout<<k;
            k--;
        }
        cout<<endl;
        i++;
    }
    return 0;
}
